@startuml
title Blackjack Game - UML Class Diagram

class Card {
  - suit: string
  - value: string
}

class Deck {
  - cards: Card[]
  + createDeck()
  + shuffle()
  + deal(): Card
}

class Player {
  - hand: Card[]
  + hit(deck: Deck)
  + handValue(): number
}

class Dealer {
  - hand: Card[]
  + play(deck: Deck)
  + handValue(): number
}

class Game {
  - deck: Deck
  - player: Player
  - dealer: Dealer
  - status: string
  - gameOver: boolean
  + deal()
  + hit()
  + stand()
  + restart()
  + determineWinner(): string
}

class Home {
  - deck: Card[]
  - player: Card[]
  - dealer: Card[]
  - status: string
  - gameOver: boolean
  + deal()
  + hit()
  + stand()
  + restart()
}

class Section {
  - title: string
  - hand: Card[]
}

class Button {
  - children
  - onClick
}

